<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.ivanrio.covid19selfcheck.ResHelper"/>
        <variable
            name="VM"
            type="com.ivanrio.covid19selfcheck.logic.MainViewModel" />
    </data>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="60dp"
            android:paddingBottom="100dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ResHelper.getRes(VM.questionTitle)}"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:onClick="@{() -> VM.answer(true)}"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/no"
                    android:backgroundTint="@color/teal_700"
                    android:onClick="@{() -> VM.answer(false)}"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>